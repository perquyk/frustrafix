{
  "manifest_version": 3,
  "name": "FrustraFix",
  "version": "5.0.0.0",

  "options_page": "options/options.html",
  "permissions": ["storage"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup/popup.html"
  },

  "icons": {
    "16": "icon/16x16.png",
    "32": "icon/32x32.png",
    "48": "icon/48x48.png",
    "128": "icon/128x128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*", "file:///*/*"],
      "js": ["jquery/jquery-3.7.1.min.js"]
    },
    {
      "matches": ["https://smartfix.unit-t.eu/*", "https://webclient.unit-t.eu/*"],
      "js": ["plugins/sfx/sfx_favicon.js"]
    },
    {
      "matches": [
        "https://webclient.unit-t.eu/",
        "https://webclient.unit-t.eu/pages/home/*"
      ],
      "js": ["plugins/sfx/webclient_home_navbuttons.js"]
    },
    {
      "matches": ["https://smartfix.unit-t.eu/interventions*"],
      "js": ["plugins/sfx/sfx_dayplanning_navbuttons.js", "plugins/sfx/sfx_dayplanning_taskbuttons.js"]
    },
    {
      "matches": ["file:///*/*"], "js": ["plugins/sfx/sfx_perform.js"]
    }
  ]
}
