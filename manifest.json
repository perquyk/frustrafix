{
  "manifest_version": 3,
  "name": "FrustraFix",
  "version": "3.4.0.0",
  "options_page": "options.html",
  "permissions": ["storage"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icon/16x16.png",
    "32": "icon/32x32.png",
    "48": "icon/48x48.png",
    "128": "icon/128x128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://webclient.unit-t.eu/*",
        "http://ants.inet.telenet.be/*",
        "https://smartfix.unit-t.eu/*",
        "file://*"
      ],
      "js": ["dayplanning.js", "antscopy.js", "home.js", "favicon.js", "materialbtns.js", "SFX.js"],
      "css": ["frustrafix.css"]
    }
  ]
}
